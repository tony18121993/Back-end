@model Spotify.Models.Tarjetum

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Tarjeta</h1>

<h4>Tarjeta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTarjeta" />
            <input type="hidden" asp-for="IdUsuario" />

            <div class="form-group">
                <label for="NombreTarjeta" class="control-label">Nombre de la Tarjeta</label>
                <input type="text" id="NombreTarjeta" asp-for="NombreTarjeta" class="form-control" />
                <span asp-validation-for="NombreTarjeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="NumeroTarjeta" class="control-label">Número de Tarjeta</label>
                <input type="text" id="NumeroTarjeta" asp-for="NumeroTarjeta" class="form-control" />
                <span asp-validation-for="NumeroTarjeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="FechaExpiracion" class="control-label">Fecha de Expiración</label>
                <input type="text" id="FechaExpiracion" asp-for="FechaExpiracion" class="form-control" />
                <span asp-validation-for="FechaExpiracion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Cvv" class="control-label">CVV</label>
                <input type="text" id="Cvv" asp-for="Cvv" class="form-control" />
                <span asp-validation-for="Cvv" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Details" asp-controller="Usuarios" asp-route-id="@Model.IdUsuario" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
