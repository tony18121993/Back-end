@model IEnumerable<Spotify.Models.Cancione>

@{
    ViewData["Title"] = "CancionesJson";
}

<h1>CancionesJson</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAlbumNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCancion" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCancion" class="btn btn-warning">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCancion" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
