@model Spotify.Models.ListasReproduccion

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que deseas eliminar esta Listas de Reproducción?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publica)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publica)
        </dd>
        <dt class="col-sm-2">
           Usuario Propietario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdUsuarioNavigation.Username)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdLista" />
        <input type="submit" value="Eliminar" class="btn btn-danger me-3" /> 
        <a asp-action="Index" class="btn btn-primary">Volver a la Lista</a>
    </form>
</div>
